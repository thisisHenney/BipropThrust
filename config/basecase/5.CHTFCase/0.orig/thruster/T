FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300;

boundaryField
{
    thruster
    {
        type            externalWallHeatFluxTemperature;
        kappaMethod     solidThermo;
        mode            coefficient;
        h               uniform 1e3;
        Ta              $internalField;
        value           $internalField;
    }

	"(thruster_to_.*)"
    {
        type            compressible::turbulentTemperatureRadCoupledMixed;
        value           $internalField;
        Tnbr            T;
        kappaMethod     solidThermo;
    }
}


